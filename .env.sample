# DocSearch (Algolia)
NEXT_PUBLIC_DOC_SEARCH_API_KEY=YOUR_API_KEY
NEXT_PUBLIC_DOC_SEARCH_INDEX_NAME=YOUR_INDEX_NAME
NEXT_PUBLIC_DOC_SEARCH_APP_ID=YOUR_APP_ID

# Google Drive API - Service Account Credentials
# GCP 콘솔에서 서비스 계정 생성 후 키(JSON)를 다운로드하여 아래 값을 입력하세요.

# 서비스 계정 이메일 (예: my-service@project-id.iam.gserviceaccount.com)
GOOGLE_SERVICE_ACCOUNT_EMAIL=

# 서비스 계정 비공개 키 (JSON 키 파일의 "private_key" 값)
# 주의: 줄바꿈 문자를 \n으로 변환하여 한 줄로 입력하세요.
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY=

# Google Drive 폴더 ID 매핑
# 각 카테고리에 해당하는 Google Drive 폴더의 ID를 입력하세요.
# 폴더 ID는 Google Drive 폴더 URL에서 확인할 수 있습니다.
# 예: https://drive.google.com/drive/folders/FOLDER_ID_HERE

# Tech 카테고리 폴더 ID
GOOGLE_DRIVE_TECH_FOLDER_ID=

# Invest 카테고리 폴더 ID
GOOGLE_DRIVE_INVEST_FOLDER_ID=

# Article 카테고리 폴더 ID
GOOGLE_DRIVE_ARTICLE_FOLDER_ID=

# About Me 폴더 ID
GOOGLE_DRIVE_ABOUTME_FOLDER_ID=
